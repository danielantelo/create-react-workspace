{
  "name": "@mydomain/root",
  "private": true,
  "workspaces": [
    "apps/*",
    "devtools/*",
    "packages/components/*",
    "packages/utils/*"
  ],
  "scripts": {
    "start": "yarn workspace @mydomain/my-app start",
    "lint": "eslint .",
    "storybook": "yarn workspace @mydomain/storybook start",
    "test": "jest",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@mydomain/eslint": "workspace:*",
    "@mydomain/jest": "workspace:*",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "typescript": "^5"
  },
  "engines": {
    "node": "^20",
    "npm": "please-use-yarn",
    "yarn": ">=3.2"
  }
}
